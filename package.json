{
  "name": "telegram-sync",
  "version": "1.0.0",
  "description": "Telegram bot that syncs channel media to Cloudflare R2",
  "main": "src/index.ts",
  "type": "module",
  "packageManager": "pnpm@10.16.0",
  "scripts": {
    "dev": "wrangler dev",
    "dev:poll": "tsx scripts/dev-poll.ts",
    "deploy": "wrangler deploy",
    "start": "wrangler dev",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "npx oxlint --config oxlintrc.json",
    "lint:fix": "npx oxlint --fix --config oxlintrc.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "setup:dev": "cp .dev.vars.example .dev.vars",
    "secrets:list": "wrangler secret list"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "superjson": "^2.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.6",
    "dotenv": "^16.6.1",
    "oxlint": "^1.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.16.0"
  },
  "author": "adriangohjw"
}
