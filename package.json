{
  "name": "telegram-sync",
  "version": "1.0.0",
  "description": "Telegram bot that syncs channel media to Cloudflare R2",
  "author": "adriangohjw",
  "workspaces": [
    "."
  ],
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "dev:poll": "tsx scripts/dev-poll.ts",
    "deploy": "wrangler deploy",
    "start": "wrangler dev",
    "build": "tsgo",
    "typecheck": "tsgo --noEmit",
    "lint": "npx oxlint --config oxlintrc.json",
    "lint:fix": "npx oxlint --fix --config oxlintrc.json",
    "format": "oxfmt --check",
    "format:fix": "oxfmt",
    "setup:dev": "cp .dev.vars.example .dev.vars",
    "secrets:list": "wrangler secret list"
  },
  "dependencies": {
    "hono": "^4.11.9",
    "superjson": "^2.2.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260208.1",
    "dotenv": "^16.6.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.43.0",
    "tsx": "^4.21.0",
    "wrangler": "^4.65.0"
  },
  "engines": {
    "bun": ">=1.3.5",
    "node": ">=22.0.0"
  },
  "packageManager": "bun@1.3.5"
}
