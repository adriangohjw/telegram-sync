{
  "name": "telegram-sync",
  "version": "1.0.0",
  "description": "Telegram bot that syncs channel media to Cloudflare R2",
  "main": "src/index.ts",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "wrangler dev",
    "dev:poll": "tsx scripts/dev-poll.ts",
    "deploy": "wrangler deploy",
    "start": "wrangler dev",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "npx oxlint --config oxlintrc.json",
    "lint:fix": "npx oxlint --fix --config oxlintrc.json",
    "setup:dev": "cp .dev.vars.example .dev.vars",
    "secrets:list": "wrangler secret list"
  },
  "dependencies": {
    "hono": "^4.11.7",
    "superjson": "^2.2.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260131.0",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.2.0",
    "dotenv": "^16.6.1",
    "oxlint": "^1.42.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.61.1"
  },
  "engines": {
    "node": ">=22.0.0",
    "bun": ">=1.3.5"
  },
  "author": "adriangohjw",
  "workspaces": [
    "."
  ]
}
